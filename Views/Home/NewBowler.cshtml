@{
}

@model Bowler


<form method="post" asp-controller="Home" asp-action="NewBowler">
    <div class="form-group">
        <input asp-for="BowlerID" class="form-control" value="0" type="hidden"/>
    </div>

    <div class="form-group">
        <label asp-for="BowlerFirstName">First Name: </label>
        <input asp-for="BowlerFirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BowlerMiddleInit">Bowler middle Inital: </label>
        <input asp-for="BowlerMiddleInit" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BowlerLastName">Bowler Last Name: </label>
        <input asp-for="BowlerLastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BowlerAddress">Address: </label>
        <input asp-for="BowlerAddress" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Bowlercity">City: </label>
        <input asp-for="Bowlercity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="bowlerState">State: </label>
        <input asp-for="bowlerState" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BowlerZip">Zip: </label>
        <input asp-for="BowlerZip" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BowlerPhoneNumber">Phone Number: </label>
        <input asp-for="BowlerPhoneNumber" class="form-control" />
    </div>
    @*<div class="form-group">
            <label asp-for="TeamID">TeamID: </label>
            <input asp-for="TeamID" class="form-control" />
        </div>*@
    <div class="form-group">
        <label asp-for="TeamID">Team: </label>
        <select asp-for="TeamID">
            <option value=1>Marlins</option>
            <option value=2>Sharks</option>
            <option value=3>Terrapins</option>
            <option value=4>Barracudas</option>
            <option value=5>Dolphins</option>
            <option value=6>Orcas</option>
            <option value=7>Manatees</option>
            <option value=8>Swordfish</option>
            <option value=9>Huckleberrys</option>
            <option value=10>MintJuleps</option>
        </select>
    </div>
    <div class="float-end">


        <input class="btn btn-primary" type="submit" value="Save Bowler" />

    </div>
    <div asp-validation-summary="All"></div>
    @*<input type="hidden" asp-for="BowlerID" value="" />*@
</form>